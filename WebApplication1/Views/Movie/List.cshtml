@model IEnumerable<Vidiling.Models.Movie>
@{
    ViewBag.Title = "Movies";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>
@Html.ActionLink("Add New Movie", "MovieForm", "Movie", null, new { @class = "btn btn-primary" })

<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genra</th>
            <th>Delete</th>
            
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts{

    <script>
        $(document).ready(function () {
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [

                    {
                        data: "name",
                        render: function (data, type, movie) {
                            return "<a href='/movie/edit/" + movie.id + "'>" + movie.name + "</a>";
                        }

                    },
                    {
                        data: "genre.name"
                    },
                    {
                        data: "id",
                        render: function (data) {

                            return "<button class='btn-link js-delete' data-movie-id=" + data + ">Delete</Button>";
                        }
                    }
                ]


            });

            $("#movies").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("are u sure u want to delete this movie?", function (result) {

                    if (result) {
                        $.ajax({
                            url:"/api/movies/" + button.attr("data-movie-id"),
                            method: "DELETE",
                            success: function() { table.row(button.parents("tr")).remove().draw(); }
                        });
                    }
                });

            });

       });

    </script>
}